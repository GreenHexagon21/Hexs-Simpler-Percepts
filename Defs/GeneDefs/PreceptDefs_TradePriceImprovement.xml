<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>TradePriceImprovementPercept</defName>
    <label>Trade Price Improvement</label>
    <iconPath>UI/Issues/TradePriceImprovementPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>TradePriceImprovement_ExtremelyStable</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>extremely bad</label>
    <description>They think it's charitable if you sell everything at a low price.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>-0.5</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_VeryStable</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>very bad</label>
    <description>Asking too much for something is shunned so they make extra sure they don't sell anything overpriced, they might be overdoing it. </description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>-0.35</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_Stable</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>bad</label>
    <description>They think money is not important at all, so they don't really care for prices that much.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>-0.1</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_Normal</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>normal</label>
    <description>They trade as regular.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_Sensitive</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>good</label>
    <description>They are taught how to haggle.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>0.1</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_VerySensitive</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>very good</label>
    <description>Their culture is highly mercantile and they know how to haggle well.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>0.3</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>TradePriceImprovement_ExtremelySensitive</defName>
    <issue>TradePriceImprovementPercept</issue>
    <label>extremely good</label>
    <description>Their traditional hymns seem to soothe traders into a hypnotic state that let's them have better deals.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <TradePriceImprovement>0.5</TradePriceImprovement>
    </statOffsets>
  </PreceptDef>

</Defs>
