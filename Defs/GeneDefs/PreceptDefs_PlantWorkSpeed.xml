<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>PlantWorkSpeedPercept</defName>
    <label>PlantWorkSpeed</label>
    <iconPath>UI/Issues/PlantWorkSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>PlantWorkSpeed_ExtremelySlow</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Draw certain symbols on the ground around the plants before harvesting them, the rest is a mystery.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>-0.5</PlantWorkSpeed>
      <PlantHarvestYield>1</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_VerySlow</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>very Slow</label>
    <description>They make sure nothing gets wasted of mother nature's gifts, even if that means slower harvests.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>-0.25</PlantWorkSpeed>
      <PlantHarvestYield>0.5</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_Slow</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>Slow</label>
    <description>They harvest crops carefully making sure they don1t waste too much.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>-0.1</PlantWorkSpeed>
      <PlantHarvestYield>0.15</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_Normal</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>normal</label>
    <description>They work on plants as they regularly would.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_Fast</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>fast</label>
    <description>They have a bit of passed down knowledge about plant harvesting.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>0.1</PlantWorkSpeed>
      <PlantHarvestYield>-0.1</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_VeryFast</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>very fast</label>
    <description>They know how to make better plant harvesting tools.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>0.3</PlantWorkSpeed>
      <PlantHarvestYield>-0.2</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PlantWorkSpeed_ExtremelyFast</defName>
    <issue>PlantWorkSpeedPercept</issue>
    <label>extremely fast</label>
    <description>They have generational knowledge about everything plant related which allows them to work on plants extremely fast. While sacrificing some of the yield. </description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PlantWorkSpeed>0.5</PlantWorkSpeed>
      <PlantHarvestYield>-0.35</PlantHarvestYield>
    </statOffsets>
  </PreceptDef>

</Defs>
