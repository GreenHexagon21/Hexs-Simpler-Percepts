<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>CaravanRidingSpeedFactorPercept</defName>
    <label>caravan riding speed</label>
    <iconPath>UI/Issues/CaravanRidingSpeedFactorPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_ExtremelySlow</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>extremely slow</label>
    <description>They have to stop and pray every hour to the travel gods to keep them safe.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>-0.5</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_VerySlow</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>very slow</label>
    <description>Traveling is a huge hassle for them, they are also not good at it.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>-0.35</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_Slow</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>Slow</label>
    <description>The funny shoes they have to wear the please the gods can get in the way of travel.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>-0.1</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_Normal</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>normal</label>
    <description>They travel normally</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_Fast</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>fast</label>
    <description>They know a technique to forage very fast on the road, making them travel faster.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>0.1</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_VeryFast</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>very fast</label>
    <description>They prefer jogging while traveling.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>0.3</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>CaravanRidingSpeedFactor_ExtremelyFast</defName>
    <issue>CaravanRidingSpeedFactorPercept</issue>
    <label>extremely fast</label>
    <description>They know the best way to avoid getting attacked on the road is to stay on it as short as possible.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <CaravanRidingSpeedFactor>0.5</CaravanRidingSpeedFactor>
    </statOffsets>
  </PreceptDef>

</Defs>
