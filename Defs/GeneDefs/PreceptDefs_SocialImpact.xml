<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>SocialImpactPercept</defName>
    <label>social impact</label>
    <iconPath>UI/Issues/SocialImpactPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>SocialImpact_ExtremelyStable</defName>
    <issue>SocialImpactPercept</issue>
    <label>extremely stable</label>
    <description>They have some much post irony that they never know when someone actually insults them.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>-0.5</SocialImpact>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_VeryStable</defName>
    <issue>SocialImpactPercept</issue>
    <label>very Stable</label>
    <description>Insulting each other is required by a deity so they are mostly fine with it.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>-0.35</SocialImpact>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_Stable</defName>
    <issue>SocialImpactPercept</issue>
    <label>Stable</label>
    <description>They are more thick skinned thanks to folk tales they have.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>-0.1</SocialImpact>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_Normal</defName>
    <issue>SocialImpactPercept</issue>
    <label>normal</label>
    <description>They act like an average pawn.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_Sensitive</defName>
    <issue>SocialImpactPercept</issue>
    <label>sensitive</label>
    <description>They are very honest so every insult hurts them more.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>0.1</SocialImpact>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_VerySensitive</defName>
    <issue>SocialImpactPercept</issue>
    <label>very sensitive</label>
    <description>They were told that words can make physical changes to their body, so they can get very upset by them.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>0.3</SocialImpact>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>SocialImpact_ExtremelySensitive</defName>
    <issue>SocialImpactPercept</issue>
    <label>extremely sensitive</label>
    <description>They take every insult to their heart and deeply think about it because that's what tradition calls for.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <SocialImpact>0.5</SocialImpact>
    </statOffsets>
  </PreceptDef>

</Defs>
