<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>MiningSpeedPercept</defName>
    <label>MiningSpeed</label>
    <iconPath>UI/Issues/MiningSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>MiningSpeed_ExtremelySlow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Research isn't a worthwhile activity at all. Why try hard at it?</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.5</MiningSpeed>
      <MiningYield>1</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_VerySlow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>very Slow</label>
    <description>Research work is unworthy of serious respect. Better not to be seen trying hard at it.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.25</MiningSpeed>
      <MiningYield>0.5</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Slow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>Slow</label>
    <description>Research work just isn't particularly meaningful. Why try hard at it?</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.1</MiningSpeed>
      <MiningYield>0.15</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Normal</defName>
    <issue>MiningSpeedPercept</issue>
    <label>normal</label>
    <description>Research is a worthwhile form of work that the community needs.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Fast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>fast</label>
    <description>Research is an especially virtuous activity.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.1</MiningSpeed>
      <MiningYield>-0.1</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_VeryFast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>very fast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.15</MiningSpeed>
      <MiningYield>-0.2</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_ExtremelyFast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>extremely fast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.5</MiningSpeed>
      <MiningYield>-0.35</MiningYield>
    </statOffsets>
  </PreceptDef>

</Defs>
