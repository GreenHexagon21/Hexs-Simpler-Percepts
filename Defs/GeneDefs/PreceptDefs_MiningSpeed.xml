<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>MiningSpeedPercept</defName>
    <label>mining</label>
    <iconPath>UI/Issues/MiningSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>MiningSpeed_ExtremelySlow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>extremely slow</label>
    <description>They paint strange symbols on the walls before mining them, it cannot be explained how but after it, it seems that the wall starts crying resources when struck.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.5</MiningSpeed>
      <MiningYield>1</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_VerySlow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>very slow</label>
    <description>They leave no stone unturned when mining, getting every little particle of resources.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.25</MiningSpeed>
      <MiningYield>0.5</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Slow</defName>
    <issue>MiningSpeedPercept</issue>
    <label>slow</label>
    <description>Resources are necessary for progress so they take extra care gathering them.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>-0.1</MiningSpeed>
      <MiningYield>0.15</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Normal</defName>
    <issue>MiningSpeedPercept</issue>
    <label>normal</label>
    <description>They mine as anyone would.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_Fast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>fast</label>
    <description>They like the destructive power of mining.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.1</MiningSpeed>
      <MiningYield>-0.1</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_VeryFast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>very fast</label>
    <description>They get in a trans like state while mining, so they can miss some resources.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.3</MiningSpeed>
      <MiningYield>-0.2</MiningYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MiningSpeed_ExtremelyFast</defName>
    <issue>MiningSpeedPercept</issue>
    <label>extremely fast</label>
    <description>They mine extremely fast but also generate a lot of waste material, loosing some yield.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MiningSpeed>0.5</MiningSpeed>
      <MiningYield>-0.35</MiningYield>
    </statOffsets>
  </PreceptDef>

</Defs>
