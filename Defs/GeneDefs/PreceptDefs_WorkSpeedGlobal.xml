<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>WorkSpeedPercept</defName>
    <label>WorkSpeed</label>
    <iconPath>UI/Issues/WorkSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>WorkSpeed_ExtremelySlow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Research isn't a worthwhile activity at all. Why try hard at it?</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.5</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_VerySlow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>very Slow</label>
    <description>Research work is unworthy of serious respect. Better not to be seen trying hard at it.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.35</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Slow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>Slow</label>
    <description>Research work just isn't particularly meaningful. Why try hard at it?</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Normal</defName>
    <issue>WorkSpeedPercept</issue>
    <label>normal</label>
    <description>Research is a worthwhile form of work that the community needs.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Fast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>fast</label>
    <description>Research is an especially virtuous activity.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_VeryFast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>very fast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.155</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_ExtremelyFast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>extremely fast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

</Defs>
