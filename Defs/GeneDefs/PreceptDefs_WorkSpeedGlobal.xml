<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>WorkSpeedPercept</defName>
    <label>work speed</label>
    <iconPath>UI/Issues/WorkSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>WorkSpeed_ExtremelySlow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Laziness is a way to acquire inner peace for them.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.5</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_VerySlow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>very slow</label>
    <description>While doing anything they have to stop and say a prayer every ten minutes to keep the spirits satisfied.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.35</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Slow</defName>
    <issue>WorkSpeedPercept</issue>
    <label>slow</label>
    <description>They think they are too powerful for this world, so they work slower to let other have a chance.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Normal</defName>
    <issue>WorkSpeedPercept</issue>
    <label>normal</label>
    <description>They work as regular.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_Fast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>fast</label>
    <description>They know it's for the greater good to work fast.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_VeryFast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>very fast</label>
    <description>They have an improved tool for everything, that only people in this ideology know how to use.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.155</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>WorkSpeed_ExtremelyFast</defName>
    <issue>WorkSpeedPercept</issue>
    <label>extremely fast</label>
    <description>"The more work you do the closer you are to the divine"</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
    </statOffsets>
  </PreceptDef>

</Defs>
