<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>PawnBeautyPercept</defName>
    <label>pawn beauty</label>
    <iconPath>UI/Issues/PawnBeautyPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>PawnBeauty_ExtremelyUgly</defName>
    <issue>PawnBeautyPercept</issue>
    <label>extremely ugly</label>
    <description>They judge everyone very harshly, they always find something to judge.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>-5</PawnBeauty>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_VeryUgly</defName>
    <issue>PawnBeautyPercept</issue>
    <label>very ugly</label>
    <description>They don't care how anyone looks, so much so they don't gain any pleasure from looking at others, even if they look nice.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>-3</PawnBeauty>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_Ugly</defName>
    <issue>PawnBeautyPercept</issue>
    <label>ugly</label>
    <description>They find beauty in nature but not in people.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>-1</PawnBeauty>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_Normal</defName>
    <issue>PawnBeautyPercept</issue>
    <label>normal</label>
    <description>They act as regular pawns.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_Lovely</defName>
    <issue>PawnBeautyPercept</issue>
    <label>lovely</label>
    <description>They can look past some imperfections.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>1</PawnBeauty>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_Beautiful</defName>
    <issue>PawnBeautyPercept</issue>
    <label>beautiful</label>
    <description>Their beauty standards are very low, and they are quite accepting.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>3</PawnBeauty>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>PawnBeauty_Gorgeous</defName>
    <issue>PawnBeautyPercept</issue>
    <label>gorgeous</label>
    <description>They think everyone is perfect as they are and a thing of beauty.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <PawnBeauty>5</PawnBeauty>
    </statOffsets>
  </PreceptDef>

</Defs>
