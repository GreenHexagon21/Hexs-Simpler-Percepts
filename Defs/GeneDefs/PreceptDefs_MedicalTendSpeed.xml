<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>MedicalTendSpeedPercept</defName>
    <label>medical tending speed</label>
    <iconPath>UI/Issues/MedicalTendSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>MedicalTendSpeed_ExtremelySlow</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Giving the best possible medical care is in their doctrine, even if that means the process takes longer.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>-0.5</MedicalTendSpeed>
      <MedicalTendQuality>1</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_VerySlow</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>very Slow</label>
    <description>They take more time, just to make sure everything goes as planned.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>-0.25</MedicalTendSpeed>
      <MedicalTendQuality>0.5</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_Slow</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>slow</label>
    <description>They work slower but not sloppier.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>-0.1</MedicalTendSpeed>
      <MedicalTendQuality>0.15</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_Normal</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>normal</label>
    <description>They do medical procedures as the average pawn would.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_Fast</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>fast</label>
    <description>the body is yucky so they prefer dong medical things faster.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>0.15</MedicalTendSpeed>
      <MedicalTendQuality>-0.1</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_VeryFast</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>very fast</label>
    <description>They think a person's essence is leaving when they are sick so they tend to problems quickly, but less effectively.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>0.3</MedicalTendSpeed>
      <MedicalTendQuality>-0.2</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MedicalTendSpeed_ExtremelyFast</defName>
    <issue>MedicalTendSpeedPercept</issue>
    <label>extremely fast</label>
    <description>Their ideology evolved from a militant one, so they do tend to injuries faster but, sloppier.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MedicalTendSpeed>0.5</MedicalTendSpeed>
      <MedicalTendQuality>-0.35</MedicalTendQuality>
    </statOffsets>
  </PreceptDef>

</Defs>
