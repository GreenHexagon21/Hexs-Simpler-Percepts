<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>ConstructionSpeedPercept</defName>
    <label>ConstructionSpeed</label>
    <iconPath>UI/Issues/ConstructionSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>ConstructionSpeed_ExtremelySlow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Research isn't a worthwhile activity at all. Why try hard at it?</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>0.5</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_VerySlow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>very Slow</label>
    <description>Research work is unworthy of serious respect. Better not to be seen trying hard at it.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>0.75</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Slow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>Slow</label>
    <description>Research work just isn't particularly meaningful. Why try hard at it?</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>0.9</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Normal</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>normal</label>
    <description>Research is a worthwhile form of work that the community needs.</description>
    <impact>Low</impact>
    <displayOrderInIssue>20</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Fast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>fast</label>
    <description>Research is an especially virtuous activity.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>1.1</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_VeryFast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>veryfast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>1.25</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_ExtremelyFast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>extremelyfast</label>
    <description>Research is among the most meaningful acts a person can perform.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statFactors>
      <ConstructionSpeedFactor>1.5</ConstructionSpeedFactor>
    </statFactors>
  </PreceptDef>

</Defs>
