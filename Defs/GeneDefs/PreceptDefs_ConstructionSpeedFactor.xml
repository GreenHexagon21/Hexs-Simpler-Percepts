<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>ConstructionSpeedPercept</defName>
    <label>construction speed</label>
    <iconPath>UI/Issues/ConstructionSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>ConstructionSpeed_ExtremelySlow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>extremely slow</label>
    <description>Why construct stuff? Nature provided us with caves.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>-0.5</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_VerySlow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>very slow</label>
    <description>They have to make a and sprinkle holy water on every new thing constructed.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>-0.35</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Slow</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>Slow</label>
    <description>They put unnecessary details on everything they make.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>-0.1</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Normal</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>normal</label>
    <description>They work as usual.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_Fast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>fast</label>
    <description>They know they can control nature with their buildings.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>0.1</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_VeryFast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>very fast</label>
    <description>They have generational knowledge about how to construct things efficiently.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>0.155</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>ConstructionSpeed_ExtremelyFast</defName>
    <issue>ConstructionSpeedPercept</issue>
    <label>extremely fast</label>
    <description>"They love constructing things, how the wall finishes itself on it's own after they perform a very specific dance is still a mystery to me" - Zy the traveler</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <ConstructionSpeedFactor>0.5</ConstructionSpeedFactor>
    </statOffsets>
  </PreceptDef>

</Defs>
