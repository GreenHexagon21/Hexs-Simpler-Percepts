<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>EatingSpeedPercept</defName>
    <label>eating speed</label>
    <iconPath>UI/Issues/EatingSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>EatingSpeed_ExtremelySlow</defName>
    <issue>EatingSpeedPercept</issue>
    <label>extremely slow</label>
    <description>They have to chew every bit of food 17 times, since it's a divine number.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>-0.5</EatingSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_VerySlow</defName>
    <issue>EatingSpeedPercept</issue>
    <label>very Slow</label>
    <description>They prefer making little art pieces out of their food before eating it. Mashed potato fields and castles.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>-0.35</EatingSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_Slow</defName>
    <issue>EatingSpeedPercept</issue>
    <label>slow</label>
    <description>They like to take their time while eating.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>-0.1</EatingSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_Normal</defName>
    <issue>EatingSpeedPercept</issue>
    <label>normal</label>
    <description>They eat normally.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_Fast</defName>
    <issue>EatingSpeedPercept</issue>
    <label>fast</label>
    <description>Eating is a chore for them so they finish meals fast.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>0.1</EatingSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_VeryFast</defName>
    <issue>EatingSpeedPercept</issue>
    <label>very fast</label>
    <description>They like blending up the food they are served with their own personal hand powered food processor, so they can eat it faster.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>0.3</EatingSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>EatingSpeed_ExtremelyFast</defName>
    <issue>EatingSpeedPercept</issue>
    <label>extremely fast</label>
    <description>They eat with their hands and stuff their faces.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <EatingSpeed>0.5</EatingSpeed>
    </statOffsets>
  </PreceptDef>

</Defs>
