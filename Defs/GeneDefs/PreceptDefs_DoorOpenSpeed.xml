<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>DoorOpenSpeedPercept</defName>
    <label>door open speed</label>
    <iconPath>UI/Issues/DoorOpenSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>DoorOpenSpeed_ExtremelySlow</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>extremely slow</label>
    <description>They hold doors in high regard so they handle them extremely carefully when passing trough them</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>-0.5</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_VerySlow</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>very slow</label>
    <description>Oiling door hinges is considered an act of evil, so all their doors open slow and squeak.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>-0.35</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_Slow</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>slow</label>
    <description>They have fancy doorhandles that area bit difficult to handle.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>-0.1</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_Normal</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>normal</label>
    <description>They have regular doors, and natural attitude towards them.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_Fast</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>fast</label>
    <description>They know how to handle doorhandles efficiently.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>0.1</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_VeryFast</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>very fast</label>
    <description>They invented better door hinges that open faster.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>0.3</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>DoorOpenSpeed_ExtremelyFast</defName>
    <issue>DoorOpenSpeedPercept</issue>
    <label>extremely fast</label>
    <description>Slamming doors as hard as possible while you travel trough them is a good way to show of how fit you are according to them.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <DoorOpenSpeed>0.5</DoorOpenSpeed>
    </statOffsets>
  </PreceptDef>

</Defs>
