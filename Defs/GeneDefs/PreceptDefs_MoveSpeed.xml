<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>MoveSpeedPercept</defName>
    <label>move speed</label>
    <iconPath>UI/Issues/MoveSpeedPercept</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>MoveSpeed_ExtremelySlow</defName>
    <issue>MoveSpeedPercept</issue>
    <label>extremely slow</label>
    <description>They think if you walk slow like a turtle you became wise.</description>
    <impact>High</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_VerySlow</defName>
    <issue>MoveSpeedPercept</issue>
    <label>very slow</label>
    <description>Physical activities are not desired.</description>
    <impact>High</impact>
    <displayOrderInIssue>40</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>-0.35</MoveSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_Slow</defName>
    <issue>MoveSpeedPercept</issue>
    <label>slow</label>
    <description>They believe that if you walk slower you live longer.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_Normal</defName>
    <issue>MoveSpeedPercept</issue>
    <label>normal</label>
    <description>They move with a regular speed.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_Fast</defName>
    <issue>MoveSpeedPercept</issue>
    <label>fast</label>
    <description>They are uncomfortably aware of the passing of time, so they move faster.</description>
    <impact>Low</impact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>0.1</MoveSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_VeryFast</defName>
    <issue>MoveSpeedPercept</issue>
    <label>very fast</label>
    <description>Fitness is very important for them so they do cartwheels and such while moving.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>0.3</MoveSpeed>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>MoveSpeed_ExtremelyFast</defName>
    <issue>MoveSpeedPercept</issue>
    <label>extremely fast</label>
    <description>Jogging seen as a virtue and should be done constantly.</description>
    <impact>Medium</impact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <statOffsets>
      <MoveSpeed>0.5</MoveSpeed>
    </statOffsets>
  </PreceptDef>

</Defs>
